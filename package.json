{
    "name": "website-static-generator",
    "version": "0.0.1",
    "license": "MIT",
    "config": {
        "mondo": "/Volumes/MONDO/001_PROJECTS/000_WEBSITE/v4"
    },
    "devDependencies": {
        "buble": "^0.15.2",
        "cpy-cli": "latest",
        "eslint": "^3.12.2",
        "eslint-config-standard": "^6.2.1",
        "eslint-plugin-promise": "^3.4.0",
        "eslint-plugin-standard": "^2.0.1",
        "fs-path": "0.0.23",
        "glob": "^7.1.1",
        "jade": "latest",
        "jshint": "^2.8.0",
        "jshint-stylish": "^0.4.0",
        "jstransformer-markdown-it": "^2.0.0",
        "live-server": "^0.8.2",
        "nib": "latest",
        "npm-run-all": "^1.2.13",
        "onchange": "^3.0.0",
        "parallelshell": "^2.0.0",
        "renamer": "^0.5.7",
        "replace-in-file": "^2.5.0",
        "rollup": "^0.34.11",
        "rollup-plugin-buble": "^0.15.0",
        "rollup-plugin-commonjs": "^4.1.0",
        "rollup-plugin-eslint": "^3.0.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-replace": "^1.1.1",
        "rollup-plugin-string": "^2.0.2",
        "rollup-plugin-uglify": "^1.0.1",
        "stylus": "latest",
        "uglify-js": "^2.5.0"
    },
    "dependencies": {
        "vue": "latest"
    },
    "scripts": {
        "create:project": "parallelshell 'mkdir views/projects/$id' 'cp -r _raw/directory/* views/projects/$id' 'cp _raw/project.jade views/projects/$id/layout.jade' 'node ./_scripts/scaffold-project $id projects' 'npm run compile:config-projects'",
        "create:page": "parallelshell 'mkdir views/pages/$id' 'cp -r _raw/directory/* views/pages/$id' 'cp _raw/page.jade views/pages/$id/layout.jade' 'node ./_scripts/scaffold-project $id pages' 'npm run compile:config-pages'",
        "clear": "rm -rf public/projects && rm -rf public/js",
        "start": "NODE_ENV=development npm-run-all --parallel server:localhost listen:* sync:images",
        "package": "NODE_ENV=production rollup --config rollup.config.package.js",
        "production": "NODE_ENV=production rollup -c",
        "server:localhost": "live-server ./public --port=3000",
        "tee":"node ./_scripts/build-image-list",
        "sync:images": "rsync -avh /Volumes/MONDO/001_PROJECTS/000_WEBSITE/v4/images/ public/images --delete",
        "listen:config-projects": "onchange 'views/projects/**/config.js' -- npm run compile:config-projects",
        "listen:config-pages": "onchange 'views/pages/**/config.js' -- npm run compile:config-pages",
        "listen:config-home": "onchange 'views/home/config.js' -- npm run compile:config-home",
        "listen:js": "onchange 'js/*.js' -- parallelshell 'echo rollup view {{changed}}' 'rollup -c -i {{changed}} -o public/{{changed}}'",
        "listen:jade-projects": "onchange 'views/projects/**/*.jade' -- npm run compile:jade-projects",
        "listen:jade-home": "onchange 'views/home/layout.jade' -- npm run compile:jade-home",
        "listen:jade-pages": "onchange 'views/pages/**/*.jade' -- npm run compile:jade-pages",
        "listen:templates": "onchange views/components/*.jade -- npm run compile:templates",
        "listen:stylus": "onchange 'stylus/**/*.styl' -- npm run compile:css",
        "compile:config-projects": "node ./_scripts/generate-json projects",
        "compile:config-pages": "node ./_scripts/generate-json pages",
        "compile:config-home": "node ./_scripts/generate-json home",    
        "compile:jade-projects": "node ./_scripts/jadeify projects",
        "compile:jade-pages": "node ./_scripts/jadeify pages",
        "compile:jade-home": "node ./_scripts/jadeify home",
        "compile:css": "stylus -u nib stylus/style.styl -o public/css/style.css",
        "compile:templates": "jade views/components -o js/templates/"
    }
}
