{
  "name": "website-static-generator",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "buble": "^0.15.2",
    "babel-eslint": "^7.1.1",
    "cpy-cli": "latest",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "jade": "latest",
    "jshint": "^2.8.0",
    "jshint-stylish": "^0.4.0",
    "live-server": "^0.8.2",
    "stylus": "latest",
    "nib": "latest",
    "npm-run-all": "^1.2.13",
    "onchange": "^3.0.0",
    "renamer": "^0.5.7",
    "uglify-js": "^2.5.0",
    "rollup": "^0.34.11",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-babel": "^2.6.1",    
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^1.0.1",
    "babel-preset-es2015-rollup": "^3.0.0"    
  },
  "scripts": {
    "firstrun": "./node_modules/.bin/eslint --init",
    "start": "NODE_ENV=development npm-run-all --parallel server:localhost listen:*",
    "package": "NODE_ENV=production rollup --config rollup.config.package.js",
    "production": "NODE_ENV=production rollup -c",
    "server:localhost": "live-server ./public --port=3000",
    "listen:js": "onchange 'js/**/*.js' -- npm run compile:bundle",
    "listen:views": "onchange 'jade/views/**/*.jade' -- npm run compile:pages",
    "listen:templates": "onchange jade/components/**/*.jade -- npm run compile:templates",
    "listen:stylus": "onchange 'stylus/**/*.styl' -- npm run compile:css",
    "precompile:js": "jshint --reporter=node_modules/jshint-stylish/stylish js/.; exit 0",
    "compile:bundle": "rollup -c",
    "compile:css": "stylus -u nib stylus/style.styl -o public/style.css",
    "compile:templates": "jade jade/components -o js/templates/",
    "compile:pages": "jade jade/views -H -o public/"
  },
  "dependencies": {
    "vue": "latest"
  }
}
