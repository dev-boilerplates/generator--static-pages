burger(unactive = red, active = yellowgreen)  
  .hamburger-inner
    transition all .2s
    background-color unactive
    border-radius 0
    &:before, &:after
      transition all .2s
      background-color unactive
      border-radius 0
  .hamburger
    &.is-active
      .hamburger-inner
        background-color active
        &:before, &:after
          background-color active
    &:hover
      opacity 1
      .hamburger-inner
        background-color $font //$orange
        &:before, &:after
          background-color $font //$orange
/**
 * Mobile Menu Active State
 */
body
  &.state--menu
    overflow-y hidden
    section
      filter blur(5px)
    nav[role="mobile"]
      .menu--stage
        opacity 1
        visibility visible
        transform scale3d(1,1,1)
        transform translate3d(0px,0px,0px)
        .item-container
          margin-left 0
        .menu-items
          transition-delay 0s
          opacity 1
          margin-left 0//15vw
          +mobile()
            padding-left 0

nav[role="desktop"]
  z-index 10
  position absolute
  width 100%
  .menu--head
    padding 15px
    display flex
    justify-content center
    align-items center
    a
      width calc(100% - 12em)
      max-width 350px
      &:after
        width 0
      #SLAB
        fill $white        
        stroke-width 1px
        stroke $white
    &.zero
      #SLAB
        fill $blue
        stroke $blue
  .menu--link
    display none
    margin 0 auto
    width calc(100% - 12em)
    max-width 350px
    // display flex
    justify-content space-around
    align-items center
    .nav-link
      font-size _fs--small
      a
        color $white
      &.active
        a
          color $font // $link
          &:after
            width 100%
    &.zero
      .nav-link
        a
          color $blue
        &.active
          a
            color $font // $link
            &:after
              width 100%


  
nav[role="mobile"]
  position fixed
  z-index 100
  .menu--icon
    position fixed
    right 1em
    top 1em
    transform-origin top
    transform scale(0.9)
    burger($white, $white)
    &.dark
      burger($font, $white)
    +mobile()
      transform scale(0.7)
      right 0em
  .menu--stage
    anim()
    wh(100vw,100vh)
    background $ghostnight
    position absolute
    opacity 0
    visibility hidden
    transform-origin center
    // transform perspective(500px) translate3d(0px,0px,300px)
    transform scale3d(0,0,0)    
    display flex
    align-items center
    justify-content space-around
    padding 0 10vw
    .item-container
      margin-bottom 20vh
      transition margin _speed--slow
      margin-left -15vw
      display flex
      align-items center
      justify-content center
      flex-direction column
      flex .25 0 auto
      +mobile()
        margin-bottom 0
        padding 1em 0
        width 60vw
      &.border--left
        border-left 1px solid $white
        +mobile()
          border-left 1px solid transparent
          border-top 1px solid $white
          flex .25 0 auto
      &.is-social
        position absolute
        align-self flex-end
        +mobile()
          align-self center
          position relative
          padding-top 0
    +mobile()
      flex-direction column
    .menu-items
      // margin-left -15vw
      // padding-left 15vw
      transition-delay 1s
      transition all 1s
      opacity 0
      // height 100%
      display flex
      align-items flex-start
      justify-content center
      flex-direction column
      +mobile()
        flex 1 0 auto
      li
        font-size 2rem
        margin .5rem 0
        a
          color $white
          +over($white, 1.1em)
            &:after
              width 100%
        &.hidden
          visibility hidden
          +mobile()
            display none
    .menu-meta
      li
        margin-bottom 1em
        font-size _fs--small
        +mobile()
          font-size 1em
        p.title
          margin 0
          font-weight bolder
        a          
          color $white
          +over($white, 1.1em)
            &:after
              width 100%
        &:last-child p
          margin 0

nav[role="mobile"].signup
  .item-container
    display none
    &.is-social
      display block