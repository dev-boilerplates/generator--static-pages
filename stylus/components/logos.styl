.client-groups
  margin _block 0
  display flex
  justify-content center
  .client-columns
    display flex

.client-logos
  display flex
  align-items center
  justify-content center
  flex-direction column
  li    
    background-repeat no-repeat
    background-position center
    background-size 50%
    wh(_calc(_body-width / 3), 100px)    
    +mq(_body-width)
      width 33vw
  .client--art-electronica
    background-image url('/assets/logo/Ars-Electronica-Logo.svg')
    background-size 85%
  .client--baltic
    background-image url('/assets/logo/Baltic.svg')
    background-size 55%
  .client--dft
