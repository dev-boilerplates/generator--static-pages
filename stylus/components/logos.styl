    background-size 40%
  .client--lacma
    background-image url('/assets/logo/LACMA_logo_black.svg')
  .client--nike
    background-image url('/assets/logo/Logo_NIKE.svg')
  .client--mailrail
    background-image url('/assets/logo/Mail_Rail_logo.svg')
    background-size 55%
  .client--more4
    background-image url('/assets/logo/more4_bw2.svg')
    background-size 25%
  .client--nyt
