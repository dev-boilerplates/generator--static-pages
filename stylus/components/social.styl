.social-content
  // width 1180px
  padding _pad2
  border-top 1px solid white
  display flex
  flex-direction column
  align-items center
  +mobile()
    padding 0
  .column
    width 50vw
    display flex
    margin .5em 0
    justify-content center
    span
      font-family _fontfamily--head
      font-size _fs--xsmall      
    +notebook()
      width 60vw
      margin 1em 0
      span.desktop
        display none
  .form
    display flex
    position relative
    align-items center
    justify-content center
    font-size .7em
    width 100%
    +mobile()
      font-size 1em      
    label
      background white
      height 100%
      padding-left 1em
      display flex
      align-items center
    input
      font-size inherit
      font-size .9em
      font-family _fontfamily--base
      padding 1em
      border none
      outline none
      flex .5 0 auto
    button
      cursor pointer      
      padding 1em
      font-size inherit
      font-size .9em
      font-family _fontfamily--base
      height 100%
      border none
      border-radius 0      
      flex .2 0 auto
      position relative
      +after()
        transition width _speed
        top calc(100% - 3px)
        left 0
        width 0%
        height 3px
        background white
        border-left 1px solid #c0c0c0
      +onAfter()
        width 100%
  .icons
    .fa
      transition all _speed
      margin 0 .5em
      cursor pointer
      &:hover
        color $white
    +mobile()
      font-size 2em