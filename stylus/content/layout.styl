/**
 * Parent Containers for wrappers and top level layout control
 */
flexi-width(max = _body-width)
  display flex
  justify-content center
  .content
    max-width max
    width 100%


fieldset
  border-top 1px solid $ghostlight
  legend
    text-align center
    h4
      padding 0 _pad

section
  margin-top _gap

nav[role="desktop"] + section
  margin-top 0

.block-step--foot
  width 100%
  height _end 

.hero-container
  color $white
  bg(cover, fixed)
  .layout
    height 100vh
    display flex
    justify-content flex-start
    align-items center
    &.videojs
      background $black
      overflow hidden
      +mq(_body-width)
        background none
    .body
      padding _pad
    #player + .body
      position absolute
      width 100%
  +mq(_body-width)
    #player
      display none


 /**
  * Sections
  */

section
  .layout
    .content
      header, .body
        margin-top _block

section[role="text"]
  .layout
    flexi-width(_body-width)


section[role="images"]
  .layout
    flexi-width(_view-width)
    .content
      figure
        .img-item
          margin-bottom 4em
          width 100%
          height 500px
          bg(cover)
          &.inline
            display inline-block
            width calc(50% - 2em)
            &:nth-child(even)
              margin-left _pad
            &:nth-child(odd)
              margin-right _pad
        &:last-child
          .img-item
            margin-bottom 0
      &.img-showcase 
        figure
          .img-item
            bg(cover)
          



