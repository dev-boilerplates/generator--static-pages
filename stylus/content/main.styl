/**
 * Main HTML Body resets and spacial definitions
 */

*:focus
  outline none

html
  font-family _fontfamily--base, helvetica, sans-serif
  font-size _fs--base
  +widescreen()
    font-size 24px
  +desktop()
    font-size 19px
  +tablet()
    font-size 14px
  +mobile-landscape()
    font-size 12px

body
  background-color $background
  color $font
  overflow-x hidden
  overflow-y scroll

ul, li
  zero()
  list-style none
a 
  color $link
  text-decoration none
  +over($linkover)
    text-decoration underline
