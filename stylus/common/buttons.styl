/**
 * Buttons & Links
 */

over(col = inherit)
  anim()
  cursor pointer
  &:hover
    color col
    {block}

active()
  display none
  visibility hidden
  &.active
    display block
    visibility visible

[class^="btn-"]
  font-weight bold
  text-align center
  cursor pointer
  user-select none
  color $white
  font-size 1em
  font-weight 100
  padding .25em
  transition all _speed


icon()
  user-select none
  padding .75em
  cursor pointer
  border 1px solid transparent
  border-radius 50%
  .icon_dimensions
    wh(1em,1em)
    svg
      wh(100%,100%)

