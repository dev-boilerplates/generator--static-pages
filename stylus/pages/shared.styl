.img-showcase
  position relative
.projects-link
  display flex
  align-items center
  &.is-centred
    justify-content center
    .link-item .fa
      padding-left 0
  .link-item
    display flex
    align-items center
    .fa
      padding 0 1em
    a
      font-size _fs--xsmall
  h4
    z-index -1
    position absolute
    width 100%

/**
 * selected project image | link
 */
.selected-img
  margin-bottom 4em
  width 100%
  height 543px
  position relative
  color white
  display flex
  align-items center
  justify-content center
  bg(cover)
  .caption
    position relative
    +after()
      transition width _speed
      background-color $white
      height 3px
      width 0%
      left 0
    span.visible
      left 0
      position absolute
      transition all _speed
      font-family _fontfamily--head
      textshadow()
      font-size _h1
      opacity 0
      transform translateY(1.5em)
      bottom auto
      margin-top .5em
    span.hidden
      visibility hidden
      font-family _fontfamily--head
      font-size _h1
  &:hover
    color white
    &:after
      width 0
    .caption
      &:after
        width 100%
      span.visible
        transform translateY(0)
        opacity 1
  &.active              
    .caption
      &:after
        width 100%
      span.visible
        transform translateY(0)
        opacity 1
/**
 * quotes
 */
ul.quotes
  li
    font-size 1em
    margin _pad 0
    padding 0 _pad2
    +tablet()
      padding 0
      font-size 1rem
      p.by
        font-size 1rem
    &:last-child
      p.by
        border-bottom none
  p
    margin 0
    &.quote
      font-family _fontfamily--head
      color $link
    &.by
      margin-top .5em
      font-size .75em
      border-bottom 1px solid $ghostlight
      padding-bottom 3em

/**
 * team
 */

.two-columns
  font-size _fs--small
  display flex
  align-items flex-start
  justify-content center
  +tablet()
    flex-direction column    
  .team-column
    display flex
    align-items center
    justify-content center
    flex-direction column
    +mobile()
      align-items flex-start
    li
      padding _pad _pad2
      +tablet()
        padding 0
      flex 1 0 1
      .title
        display flex
        align-items flex-start
        flex-direction column
        justify-content space-between
        height _pad
        margin-bottom 1em
        .badge
          color $grey--mid
          vertical-align middle
          font-size _fs--xsmall
          // color white
          // background $ghostlight
          // border 1px solid $ghostlight
          border-radius 5px
          padding .5em 0
      .name, .badge
        font-family _fontfamily--head
      &.mobile
        display none
      +tablet()
        &.mobile
          display block
        &.desktop
          display none
      &:last-child
        padding-bottom 0
        +tablet()
          padding-bottom _pad
        .about
          margin-bottom 0
    &.left li
      padding-left 0
    &.right li
      padding-right 0